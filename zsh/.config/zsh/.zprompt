red=$(tput setaf 1)
white=$(tput setaf 15)
yellow=$(tput setaf 11)
purple=$(tput setaf 5)
aqua=$(tput setaf 6)

# Highlight the user name when logged in as root.
if [[ "${USER}" == "root" ]]; then
  userStyle="${red}"
else
  userStyle="${orange}"
fi

PS1="\$(prompt_venv)" # virtual environment
PS1+=$'\n'
